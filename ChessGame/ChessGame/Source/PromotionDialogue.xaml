<Window x:Class="ChessGame.Source.PromotionDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGame.Source"
        mc:Ignorable="d"
        Title="PromotionDialogue" Height="107.676" Width="300">
    <StackPanel>
        
        <TextBlock Text="You can promote the Pawn, chose a piece below."
                   FontSize="13"
                   TextAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

            <Button Name="pawn" Content="♙" Height="30" Width="30" FontSize="20" Click="Button_Click"/>
            <Button Name="knight" Content="♘" Height="30" Width="30" FontSize="20" Click="Button_Click"/>
            <Button Name="bishop" Content="♗" Height="30" Width="30" FontSize="20" Click="Button_Click"/>
            <Button Name="rook" Content="♖" Height="30" Width="30" FontSize="20" Click="Button_Click"/>
            <Button Name="queen" Content="♕" Height="30" Width="30" FontSize="20" Click="Button_Click"/>

        </StackPanel>
        
    </StackPanel>
</Window>
